{
    "version": "0.3.0",
    "configurations": [
        {
            "name": "Attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "justMyCode": false,
        },
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "env": {
                "ENV": "dev",                    // default to be dev environment
                "DEBUG": "true",                 // to enable reload for debuggging
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Build",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/build.py",
            "console": "integratedTerminal",
            "windows": { // Windows-specific properties
                "args": [
                    "--root_dir", 
                    ".",          
                    "--platform",
                    "win",
                    "--mode",
                    "dev",
                    "--output_dir",
                    "${workspaceFolder}/dist",
                    // "--no-cache",    // for dev build, use cache to reuse previous build results
                ]
            },
            "osx": { // macOS-specific properties
                "args": [
                    "--root_dir",
                    ".",
                    "--platform",
                    "mac",
                    "--mode",
                    "dev",
                    "--output_dir",
                    "${workspaceFolder}/dist",
                    "--no-cache",
                    "false",
                ]
            }
        },
    ]
}